# Standard things
sp 		:= $(sp).x
dirstack_$(sp)	:= $(d)
d		:= $(dir)

# Local variables
LIBNAME		:= libdsds.so
LIBDSDS		:= $(d)/$(LIBNAME)
FPICOBJ_$(d)	:= $(addprefix $(d)/, dsds.o table.o hash_table.o hcontainer.o)
FPICOBJ		:= $(FPICOBJ) $(FPICOBJ_$(d))
DEP_$(d)	:= $(FPICOBJ_$(d):%=%.d)

CLEAN		:= $(CLEAN) $(FPICOBJ_$(d)) $(LIBDSDS) $(DEP_$(d))

S_$(d)		:= $(notdir $(LIBDSDS))

WLOPTION	:= -soname,$(LIBNAME)

CF_$(d)		:= -I/home/soi/CM/include

# Local rules
$(FPICOBJ_$(d)):	CF_TGT := $(CF_$(d))
$(FPICOBJ_$(d)):	$(SRCDIR)/$(d)/Rules.mk

$(LIBDSDS):		LF_TGT := -shared -Wl,$(WLOPTION)
$(LIBDSDS):		$(FPICOBJ_$(d))
			$(LINK)
			$(SLLIB)

# Shortcuts
.PHONY:	$(S_$(d))
$(S_$(d)):	%:	$(d)/%

# Standard things
-include	$(DEP_$(d))

d		:= $(dirstack_$(sp))
sp		:= $(basename $(sp))
